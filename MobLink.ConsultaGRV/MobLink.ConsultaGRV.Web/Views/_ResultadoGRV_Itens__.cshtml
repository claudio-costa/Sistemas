                $("#txtbairro").val(data["bairro"]);
                $("#txtnumero").focus();

                //$(data).each(function () {
                //    $("#resultado").append("Nome: " + this.Nome + " Sobrenome:"
                //        + this.Sobrenome + " <br/>");

                //});
            },
            complete: function () {
                $('#btnpesquisacep').text("Pesquisar");
                //$("#resultado").text("CONSULTA REALIZADA");
            }

        });
    }
</script>

