    <div class="container">

        @if (ViewBag.Title != "Login")
        {
            <h5><strong><span>@ViewBag.Title.ToUpper()</span></strong></h5><hr />
        }

        @if (!string.IsNullOrWhiteSpace(ViewBag.Erro))
        {
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Atenção!</strong> @ViewBag.Erro.
            </div>
        }

        @if (TempData["ERRO"] != null)
        {
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Atenção!</strong> @TempData["ERRO"]
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(ViewBag.Msg))
        {
            <div class="alert alert-success small" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @ViewBag.Msg
            </div>
        }

        <script src="~/Scripts/jquery-3.2.1.js"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/Scripts/jquery.mask.js"></script>
        @RenderBody()
    </div>

