<!-- LOGIN FORM -->


<div class="text-center" style="padding:50px 0;">
    <div class="logo">
        <h3>@Constantes.NOME_APP</h3>
        <p>Digite seu login e senha para acesso</p>
    </div>

    @{ViewBag.Title = "Login";}

    @using (Html.BeginForm())
    {
        @*< !--Main Form-- >*@
        <div class="login-form-1">

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <form id="login-form" class="text-left">
                        <div class="login-form-main-message"></div>
                        <div class="main-login-form">
                            <div class="login-group">
                                <div class="form-group">
                                    @*<label for="login" class="sr-only">Username</label>*@
                                    <input type="text" class="form-control" id="login" name="login" placeholder="Login">
                                </div>
                                <div class="form-group">
                                    @*<label for="senha" class="sr-only">Password</label>*@
                                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha">
                                </div>
                            </div>

                            @*<button type="submit" class="btn btn-warning center-block">Entrar</button>*@
                            <input type="submit" value="Entrar" class="btn btn-primary" /><br /><br />

                        </div>
                        <br />

                        <div class="etc-login-form">
                            @*<p><a href="http://www.linkpatios.com.br">LinkPatios</a> WebLeilão</p>*@
                            <h6>LinkPatios - @Constantes.NOME_APP &reg;Todos os direitos reservados.</h6>
                        </div>
                    </form>

                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    <!-- end:Main Form -->
    }
</div>