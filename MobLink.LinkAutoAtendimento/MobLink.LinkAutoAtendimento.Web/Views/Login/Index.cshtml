<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
<!-- Where all the magic happens -->
<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
    <div class="logo">
        <img src="~/Imagens/logo.png" /><br />
        <strong style="font-size: 25px; color: #efeded">Consulta de GRV</strong><br /><br />
    </div>

    @if (!string.IsNullOrWhiteSpace(ViewBag.Erro))
    {
        <div class="alert alert-danger" role="alertdialog">@ViewBag.Erro</div>
    }

    @using (Html.BeginForm())
    {
        @*< !--Main Form-- >*@
        <div class="login-form-1">

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <form id="login-form" class="text-left">
                        <div class="login-form-main-message"></div>
                        <div class="main-login-form">
                            <div class="login-group">
                                <div class="form-group">
                                    <label for="login" class="sr-only">Username</label>
                                    <input type="text" class="form-control" id="login" name="login" placeholder="Login">
                                </div>
                                <div class="form-group">
                                    <label for="senha" class="sr-only">Password</label>
                                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha">
                                </div>
                                @*<div class="form-group login-group-checkbox">
                                        <input type="checkbox" id="lg_remember" name="lg_remember">
                                        <label for="lg_remember">remember</label>
                                    </div>*@
                            </div>
                            @*<button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>*@

                            <button type="submit" class="btn btn-warning center-block">Entrar</button>
                        </div>
                        <br />
                        <div class="etc-login-form">
                            <p><a href="http://www.linkpatios.com.br">LinkPatios</a> Consulta GRV</p>
                            @*<p>Sistema de consulta de GRV e cálculo de saldo devedor <a href="#">create new account</a></p>*@
                            <p>&reg;Todos os direitos reservados.</p>
                        </div>
                    </form>



                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    <!-- end:Main Form -->
    }
</div>